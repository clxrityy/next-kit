{
  "name": "@clxrity/next-kit",
  "version": "0.1.2",
  "description": "Tools and utilities for Next.js projects",
  "type": "module",
  "private": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --fix",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/next-kit.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "next",
    "react",
    "toolkit",
    "tools",
    "utilities"
  ],
  "author": "MJ Anglin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clxrityy/next-kit/issues"
  },
  "homepage": "https://github.com/clxrityy/next-kit#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.4",
    "clsx": "^2.1.1",
    "eslint": "^9.22.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
